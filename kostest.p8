--movement
function key_control()

col = dist_to_col(0,-1,0)
if(btnp(⬆️)
 and hero.sy == 0 
 and hero.on_flore)
 and col.y == nil then
 hero.sy -= 10
end

hero.sy += 0.3

hero_move()
end

function hero_move()

xd =flr((sgn(hero.sx)+1)/2)
yd =flr((sgn(hero.sy)+1)/2)

colx = dist_to_col(sgn(hero.sx),0,0)
colx2 = dist_to_col(-1*sgn(hero.sx),0,0)
coly = dist_to_col(0,sgn(hero.sy),0)

if coly.y ~= nil then
 hero.on_flore = sgn(hero.sy) == 1
 if coly.y <= hero.sy then
 hero.sy *= -1 
 else
 hero.sy = coly.y-(9*yd)
  end
end

if colx.x  ~= nil and 
colx.x-(8*xd) <= hero.sx and
colx2.x == nil then
 hero.sx *= -1
end

hero.x += hero.sx
hero.y += hero.sy
end

