--init
function _init()
hero = {}
col = {} -- colide position
hero.hp = 11
hero.x = 4*8
hero.y = 24
bah = 0
hero.sx = 1 -- speed
hero.sy = 1 -- speed
hero.on_flore = false

i = 0
max_frame = 3
speed = 5
end


