--draw
function _draw()
cls()
map()


xd =flr((sgn(hero.sx)+1)/2)

col = dist_to_col(0,-1,0)
print(col,hero.x+16,hero.y)
print(col.x,hero.x+16,hero.y+8)
print(col.y,hero.x+16,hero.y+16)

_draw_hero()
draw_hero_hp()
end

function _draw_hero()
i += 1/speed
frame = 0
if hero.sy==0 then
frame = flr(i) % max_frame
end

sspr (frame*16,0,
16,16,
hero.x,hero.y-((2-frame)*2)+1,16,16,
sgn(hero.sx) == -1,false)
if i >= max_frame then
 i = 0
 end
end
